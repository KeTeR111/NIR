{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Python File",
      "type": "shell",
      "command": "${workspaceFolder}/venv/bin/python3",
      "args": ["${file}"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",  // ← это ключевое! Вывод в общем терминале
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}